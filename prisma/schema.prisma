generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id            Int    @id @default(autoincrement())
  name          String
  email         String @unique
  password      String?
  role          Role   @default(STUDENT)
  isVerified    Boolean @default(false)
  verificationToken String?
  provider      String? // For OAuth
}

enum Role {
  STUDENT
  TEACHER
  ADMIN
}